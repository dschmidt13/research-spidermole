<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>


<BorderPane xmlns="http://javafx.com/javafx/9.0.1"
	xmlns:fx="http://javafx.com/fxml/1"
	fx:controller="org.spidermole.app.appraiser.AppraisalStreamViewController" prefWidth="200" prefHeight="400">
	<center>
		<VBox alignment="CENTER" spacing="10.0"
			BorderPane.alignment="CENTER">
			<children>
				<TextField fx:id="fieldFilterText" prefWidth="200.0"
					promptText="Filter for Titles Containing..." VBox.vgrow="NEVER" />
				<HBox alignment="CENTER_RIGHT" spacing="10.0"
					VBox.vgrow="NEVER">
					<children>
						<Label text="Sort:" />
						<ComboBox fx:id="fieldSortBy" prefWidth="150.0"
							HBox.hgrow="ALWAYS" />
					</children>
					<VBox.margin>
						<Insets right="5.0" />
					</VBox.margin>
				</HBox>
				<HBox alignment="CENTER_RIGHT">
					<children>
						<Label fx:id="fieldRemainingLabel" alignment="CENTER"
							contentDisplay="CENTER" text="Remaining: 0">
							<font>
								<Font name="System Bold" size="12.0" />
							</font>
							<HBox.margin>
								<Insets />
							</HBox.margin>
						</Label>
					</children>
					<VBox.margin>
						<Insets right="5.0" />
					</VBox.margin>
				</HBox>
				<Button fx:id="fieldGenerateButton" mnemonicParsing="false"
					prefHeight="30.0" prefWidth="200.0" text="Load Stream"
					onAction="#actionLoadStream" />
			</children>
			<BorderPane.margin>
				<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
			</BorderPane.margin>
		</VBox>
	</center>
</BorderPane>
